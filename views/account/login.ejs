<!--Displaying providioned title or redirecting response to default index route-->
<%if (title) {%>
    <h1><%=title%></h1>
<%} else{
    res.redirect('/')
}%>

<!--Displaying messages in the view-->
<%- messages() %>

<!--Login Form-->
<form class="login" action="account/login" method="POST">
        <label for="account_email">Email:</label>
        <input  type="email" id="account_email" name="account_email" required title="input a valid login to sign-in">
        <label for="account_password">Password:</label>
        <input id="account_password" name="account_password" type="password" required>
        <button type="submit">Login</button>
    <p>No account? <a href="/account/signup" title="Create a new account in CSE Motors">Sign-up</a></p>
</form>
