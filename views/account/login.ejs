<!--Displaying providioned title or redirecting response to default index route-->
<%if (title) {%>
    <h1><%=title%></h1>
<%} else{
    res.redirect('/')
}%>

<!--Displaying messages in the view-->
<%- messages() %>

<!--Displaying errors if any-->
<% if (errors){%>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if(error.msg != "Invalid value"){%>
                <li> <%=error.msg%> </li>
            <%}%>
        <% }) %>
    </ul>
<%}%>

<!--Login Form-->
<form class="login" action="/account/login" method="post">
        <label for="account_email">Email:*</label>
        <input  type="email" id="account_email" name="account_email" required title="input a valid login to sign-in" value="<%=locals.account_email%>">
        <label for="account_password">Password:*</label>
        <input  type="password" id="account_password" name="account_password" required title="Type a valid password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$">
        <button type="submit">Login</button>
    <p>No account? <a href="/account/register" title="Create a new account in CSE Motors">Sign-up</a></p>
</form>
