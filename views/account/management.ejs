<!--Displaying providioned title or redirecting response to default index route-->
<%if (title) {%>
    <h1><%=title%></h1>
<%} else{
    res.redirect('/')
}%>

<!--Displaying messages in the view-->
<%- messages() %>

<!--Displaying errors if any-->
<% if (errors){%>
    <ul class="notice">
        <% errors.array().forEach(error => { %>
            <% if(error.msg != "Invalid value"){%>
                <li> <%=error.msg%> </li>
            <%}%>
        <% }) %>
    </ul>
<%}%>

